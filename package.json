{
  "name": "@adonisjs/mail",
  "version": "4.0.0-0",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "main": "build/providers/MailProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "adonis",
    "mailer",
    "node-mailer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^6.2.3",
    "@adonisjs/mrm-preset": "^2.2.3",
    "@adonisjs/view": "^1.0.9",
    "@types/node": "^13.1.1",
    "commitizen": "^4.0.3",
    "copyfiles": "^2.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "dotenv": "^8.2.0",
    "husky": "^3.1.0",
    "japa": "^3.0.1",
    "mrm": "^2.0.2",
    "np": "^5.2.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@adonisjs/view": "^1.x.x",
    "@adonisjs/core": "^2.x.x"
  },
  "dependencies": {
    "@poppinss/manager": "^2.1.3",
    "nodemailer": "^6.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-mail/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-mail#readme",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "adonisjs": {
    "templates": {
      "config": [
        "mail.txt"
      ]
    },
    "types": "@adonisjs/mail"
  }
}
