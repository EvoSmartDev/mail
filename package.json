{
  "name": "@adonisjs/mail",
  "version": "3.0.5",
  "description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
  "main": "index.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "adonis",
    "adonis-framework"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^4.0.8",
    "@adonisjs/sink": "^1.0.16",
    "aws-sdk": "^2.234.1",
    "coveralls": "^3.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^5.0.1",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "mailparser": "^2.2.0",
    "nodemailer-ses-transport": "^1.5.1",
    "nyc": "^11.7.1",
    "semver": "^5.5.0",
    "standard": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "bin"
    ]
  },
  "standard": {
    "globals": [
      "use"
    ]
  },
  "dependencies": {
    "@adonisjs/generic-exceptions": "^2.0.0",
    "clone": "^2.1.1",
    "debug": "^3.1.0",
    "form-data": "^2.3.2",
    "get-stream": "^3.0.0",
    "got": "8.3.0",
    "nodemailer": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-mail.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-mail/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-mail#readme"
}
